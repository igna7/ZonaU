<h2 class="tfield">Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="lfield">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="lfield">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="lfield">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn-submit" %>
  </div>
<% end %>
<div class="tlinks">
  <%= render "devise/shared/links" %>
</div>
