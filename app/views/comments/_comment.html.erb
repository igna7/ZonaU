<article class="comments-bottom">
  <header class="text-right be-small col-md-12">
    <%= time_ago_in_words(comment.created_at) %> ago - <%= link_to "Borrar", [@article,comment], class:"red", method: :delete %>
  </header>
  <div class="row bottom-space">
    <div class="col-xs-2 col-md-1">
      <div class="box">
        <img src="/user_avatar.jpg">
      </div>
    </div>
    <div class="col-xs-10 col-md-11">
      <div class="box">
        <%= comment.body %>
      </div>
    </div>
  </div>
</article>
