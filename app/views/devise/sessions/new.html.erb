<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="lfield">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="lfield">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", style: "width:450px;", class:"form-styles lfield" %>
  </div>
  <% if devise_mapping.rememberable? -%>
    <div class="lfield">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %>
    </div>
  <% end -%>

  <div class="actions" >
    <%= f.submit "Entrar", class:"btn-submit" %>
  </div>
<% end %>
<div class="tlinks">
  <%= render "devise/shared/links" %>
</div>
