<h2 class="tfield"> Editar datos</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="lfield">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="lfield">
    <%= f.label :password, "New password" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="lfield">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="lfield">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", style: "width:450px;", class:"form-styles lfield" %>
  </div>

  <div class="actions">
    <%= f.submit "Update",class:"btn-submit"  %>
  </div>
<% end %>

<div class="tlinks">
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn-cancel" %></p>
</div>
